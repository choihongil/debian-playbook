# enable vertical scrolling
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation" 1
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Button" 2
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Timeout" 200

# enable horizontal scrolling in addition to vertical scrolling
xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Wheel Emulation Axes" 6 7 4 5

# enable middle button emulation (using left- and right-click simultaneously)
#xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Middle Button Emulation" 1
#xinput set-prop "TPPS/2 IBM TrackPoint" "Evdev Middle Button Timeout" 50

# disable touchpad (pip install --user xinput)
disable-touchpad

# map capslock to escape
setxkbmap -option caps:escape

# disable DPMS
xset -dpms
# turn off screen saver function
xset s off
